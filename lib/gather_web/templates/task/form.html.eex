<%= form_for @changeset, @action, fn f -> %>
  <%= if @changeset.action do %>
    <div class="alert alert-danger">
      <p>Oops, something went wrong! Please check the errors below.</p>
    </div>
  <% end %>

  <%= label f, :task %>
  <%= text_input f, :task %>
  <%= error_tag f, :task %>

  <%= label f, :completed %>
  <%= checkbox f, :completed %>
  <%= error_tag f, :completed %>

  <%= label f, :user %>
  <%= number_input f, :user %>
  <%= error_tag f, :user %>

  <div>
    <%= submit "Save" %>
  </div>
<% end %>
